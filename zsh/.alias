#alias vim='nvim'
#alias vi='nvim'
#alias viu='sxiv'
alias stow='stow -t ~'
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -la'
alias l='ls'
alias l.="ls -A | egrep '^\.'"
alias cls='clear && ls'
alias bashconfig='vim ~/.bashrc'
alias bashalias='vim ~/.alias'
alias zshconfig='vim ~/.zshrc'
alias zshalias='vim ~/.alias'
alias kittyconf='vim ~/.config/kitty/kitty.conf'
alias nvimconf='vim ~/.config/nvim/init.lua'
alias unlock='sudo rm /var/lib/pacman.d/db.lck'
alias free='free -mt'
alias wget='wget -c'
alias gitget='git clone'
alias gitpull='git pull'
alias aurget="git clone https://aur.archlinux.org/$1"
alias setbg="feh --bg-scale $1"
alias merge='xrdb -merge ~/.Xresources'
alias pacman='sudo pacman --color auto'
alias update='sudo pacman -Syyu'
alias upgrade='sudo pacman -Sy --color auto'
alias updb='sudo updatedb'
alias di='sudo pacman --color auto -S'
alias ds='pacman --color auto -Ss'
alias pai='paru -S'
alias pas='paru -Ss'
alias upall='paru -Syu'
alias upallnoc='paru -Syu -noconfirm'
alias ps='ps auxf'
alias psgrep='ps aux | grep -v grep | grep -i -e VSZ -e'
alias updategrub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias fixpng="find . -type f -name '*.png' -exec convert{} -strip {} \;"
alias fc="sudo fc-cache -vf && fc-cache -vf"
alias rip="expac --timefmt='%Y-%m-%d' '%l\t\%n %v' | sort | tail -100"
alias jctl="journalctl -p 3 -xb"
alias cat="bat"
